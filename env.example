DJANGO_SECRET_KEY=replace-me
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost

AWS_REGION=us-east-1
AWS_SECRET_ID=e2era-app-secrets

# Postgres (set these for Aurora/RDS; leave empty to fall back to SQLite)
DB_HOST=<aurora-endpoint>   # e.g. mydb.cluster-xxxx.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=e2era
DB_USER=e2era
DB_PASSWORD=change-me
DB_SSL_MODE=require

# Cookies (set to true when serving HTTPS)
SESSION_COOKIE_SECURE=false
CSRF_COOKIE_SECURE=false

